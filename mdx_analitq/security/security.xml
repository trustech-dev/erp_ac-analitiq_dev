    <record id="group_vm_project_tracking_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="mdx_analitq.module_vm_project_tracking"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record> 

    <!-- 
        impied_ids kaldırılma sebebi gerek yok. Gruba inherit olarak internal user veriyor.
