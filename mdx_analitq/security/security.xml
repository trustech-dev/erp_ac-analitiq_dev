    <record model="ir.rule" id="project_tracking_view_rule_user">
        <field name="name">Project Tracking User View Rule</field>
        <field name="model_id" ref="model_vm_project_tracking"/>
        <field name="groups" eval="[(4, ref('mdx_analitq.group_vm_project_tracking_user'))]" />
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
    </record>

    <record id="group_vm_project_tracking_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="mdx_analitq.module_vm_project_tracking"/>
        <field name="implied_ids" eval="[(4, ref('mdx_analitq.group_vm_project_tracking_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record model="ir.rule" id="project_tracking_view_rule_manager">
        <field name="name">Project Tracking Administrator View Rule</field>
        <field name="model_id" ref="model_vm_project_tracking"/>
        <field name="groups" eval="[(4, ref('mdx_analitq.group_vm_project_tracking_manager'))]" />
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

