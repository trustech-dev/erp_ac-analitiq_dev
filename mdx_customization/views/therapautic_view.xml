<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_therapeutic_area_list" model="ir.ui.view">
            <field name="name">therapeutic.area.list</field>
            <field name="model">therapeutic.area</field>
            <field name="arch" type="xml">
                <list string="Therapeutic Areas" sample="1">
                    <field name="name" string="Therapeutic Area"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Therapeutic Area Form View -->
        <record id="view_therapeutic_area_form" model="ir.ui.view">
            <field name="name">therapeutic.area.form</field>
            <field name="model">therapeutic.area</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Therapeutic Area Search View -->
        <record id="view_therapeutic_area_search" model="ir.ui.view">
            <field name="name">therapeutic.area.search</field>
            <field name="model">therapeutic.area</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Therapeutic Area Action -->
        <record id="action_therapeutic_areas" model="ir.actions.act_window">
            <field name="name">Therapeutic Areas</field>
            <field name="res_model">therapeutic.area</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first therapeutic area!
                </p>
            </field>
        </record>
                <record id="view_indication_list" model="ir.ui.view">
            <field name="name">indication.list</field>
            <field name="model">indication</field>
            <field name="arch" type="xml">
                <list string="Indications" sample="1">
                    <field name="name" string="Indication"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Indication Form View -->
        <record id="view_indication_form" model="ir.ui.view">
            <field name="name">indication.form</field>
            <field name="model">indication</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Indication Search View -->
        <record id="view_indication_search" model="ir.ui.view">
            <field name="name">indication.search</field>
            <field name="model">indication</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Indication Action -->
        <record id="action_indications" model="ir.actions.act_window">
            <field name="name">Indications</field>
            <field name="res_model">indication</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first indication!
                </p>
            </field>
        </record>

        <menuitem id="menu_medical_configuration" name="Medical Configuration"
            parent="contacts.menu_contacts" sequence="100"/>
        
        <menuitem id="menu_therapeutic_areas" name="Therapeutic Areas"
          parent="menu_medical_configuration" 
          action="action_therapeutic_areas" sequence="10"/>
        
        <menuitem id="menu_indications" name="Indications"
          parent="menu_medical_configuration" 
          action="action_indications" sequence="20"/>
    </data>
</odoo>