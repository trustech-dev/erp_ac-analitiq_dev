<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_project_task_faculties_inherit" model="ir.ui.view">
        <field name="name">project.task.faculties.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <div class="oe_button_box">
                    <button name="action_url" type="object" string="Open URL" class="btn-primary"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="faculty_id" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Primer SC</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="unblinded_sc_id" class="o_task_user_field" domain="[('share', '=', False)]" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="blinded_sc_id" class="o_task_user_field" domain="[('share', '=', False)]" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="backup_sc_id" class="o_task_user_field" domain="[('share', '=', False)]" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="country_id" invisible="1" />
                <field name="state_id" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="site_employee_id_pi" widget="many2one" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="site_employee_id" options="{'no_create': True}" />
                <field name="date_cov"/>
                <field name="date_siv"/>
            </xpath>
            <!-- <xpath expr="//field[@name='sale_line_id']" position="after">
                <separator string="Invoice Details"/>
            </xpath> -->
            <!-- <xpath expr="//field[@name='sale_line_id']" position="after">
                <field name="date_cov"/>
            </xpath>
            <xpath expr="//field[@name='sale_line_id']" position="after">
                <field name="date_siv"/>
            </xpath> -->
        </field>
    </record>

