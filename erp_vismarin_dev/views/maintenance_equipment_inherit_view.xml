<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="maintenance_hr_equipment_view_form_inherit" model="ir.ui.view">
            <field name="name">maintenance.hr_equipment_view_form.view.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="project_id" options="{'no_create': True}" invisible="equipment_assign_to != 'other'"/>
                    <field name="task_id" options="{'no_create': True}" invisible="equipment_assign_to != 'other'"/>
            </xpath>
            </field>
        </record>
    </data>
</odoo>