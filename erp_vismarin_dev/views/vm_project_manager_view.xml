<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_vm_project_manager_form" model="ir.ui.view">
            <field name="name">vm.project.manager.form</field>
            <field name="model">vm.project.manager</field>
            <field name="arch" type="xml">
                <form string="Project Manager">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                        </group>
                        <group groups="base.user_admin">
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>



        <record id="view_vm_project_manager_tree" model="ir.ui.view">
            <field name="name">vm.project.manager.tree</field>
            <field name="model">vm.project.manager</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Project Manager">
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="phone" groups="base.user_admin"/>
                    <field name="email" groups="base.user_admin"/>
                </list>
            </field>
        </record>

        <record id="view_vm_project_manager_search" model="ir.ui.view">
            <field name="name">vm.project.manager.search</field>
            <field name="model">vm.project.manager</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Project Manager">
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="act_open_vm_project_manager_view">
            <field name="name">Project Manager</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vm.project.manager</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vm_project_manager_tree"/>
            <field name="search_view_id" ref="view_vm_project_manager_search"/>
        </record>


        <menuitem action="act_open_vm_project_manager_view" name="Project Managers" parent="project.menu_project_config" id="menu_vm_project_manager" sequence="100"/>

    </data>
</odoo>