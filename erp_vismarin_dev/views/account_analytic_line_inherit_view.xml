<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_smart_button" model="ir.ui.view">
            <field name="name">account.analytic.line.tags.form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='project_id']" position="after">
                        <field name="partner_id" readonly="1" options="{'no_open': True}"/>
                    </xpath>
                    <xpath expr="//field[@name='task_id']" position="replace">
                        <field name="task_id" options="{'no_create_edit': True, 'no_open': True}" widget="task_with_hours" context="{'default_project_id': project_id}" domain="[('project_id', '=', project_id)]"/>
                    </xpath>
                    <xpath expr="//field[@name='task_id']" position="after">
                        <field name="planned_date"  groups="erp_vismarin_dev.group_medex_planned_date"/>
                        <field name="visit_type_id" options="{'no_create': True}"/>
                        <field name="visit_type_name" invisible="1"/>
                        <field name="patient_id" options="{'no_create': True}" domain = "[('project_id', '=', project_id), ('task_id', '=', task_id)]"/>
                        <field name="visit_no" required="True" force_save="1" readonly="visit_type_name != 'PATIENT VISIT'"/>
                    </xpath>
                    <xpath expr="//field[@name='name']" position="replace">
                        <field name="name" required="0"/>
                    </xpath>
                    <xpath expr="//field[@name='name']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='unit_amount']" position="replace">
                        <field name="unit_amount" widget="timesheet_uom" sum="Total" decoration-danger="unit_amount &gt; 24"/>
                    </xpath>
                    <xpath expr="//field[@name='unit_amount']" position="attributes">
                        <attribute name="required">1</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
